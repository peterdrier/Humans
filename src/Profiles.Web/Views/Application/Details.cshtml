@model Profiles.Web.Models.ApplicationDetailViewModel
@{
    ViewData["Title"] = "Application Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Applications</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Application Details</h1>
            <span class="badge fs-5 @StatusBadgeExtensions.GetApplicationStatusBadgeClass(Model.Status)">@Model.Status</span>
        </div>

        <div class="card mb-4">
            <div class="card-header">Application Information</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Submitted</dt>
                    <dd class="col-sm-9">@Model.SubmittedAt.ToString("d MMMM yyyy 'at' HH:mm")</dd>

                    @if (Model.ReviewStartedAt.HasValue)
                    {
                        <dt class="col-sm-3">Review Started</dt>
                        <dd class="col-sm-9">@Model.ReviewStartedAt.Value.ToString("d MMMM yyyy")</dd>
                    }

                    @if (Model.ResolvedAt.HasValue)
                    {
                        <dt class="col-sm-3">Resolved</dt>
                        <dd class="col-sm-9">@Model.ResolvedAt.Value.ToString("d MMMM yyyy")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.ReviewerName))
                    {
                        <dt class="col-sm-3">Reviewed By</dt>
                        <dd class="col-sm-9">@Model.ReviewerName</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Your Motivation</div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.Motivation</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AdditionalInfo))
        {
            <div class="card mb-4">
                <div class="card-header">Additional Information</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.AdditionalInfo</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ReviewNotes))
        {
            <div class="card mb-4">
                <div class="card-header">Reviewer Notes</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.ReviewNotes</p>
                </div>
            </div>
        }

        @if (Model.CanWithdraw)
        {
            <div class="card border-warning mb-4">
                <div class="card-body">
                    <h5 class="card-title">Withdraw Application</h5>
                    <p class="card-text text-muted">If you no longer wish to proceed with this application, you can withdraw it.</p>
                    <form asp-action="Withdraw" asp-route-id="@Model.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to withdraw this application?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-warning">Withdraw Application</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Application History</div>
            <div class="card-body">
                @if (Model.History.Count == 0)
                {
                    <p class="text-muted mb-0">No history available.</p>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var entry in Model.History)
                        {
                            <li class="mb-3 pb-3 border-bottom">
                                <div class="d-flex justify-content-between">
                                    <strong>@entry.Status</strong>
                                    <small class="text-muted">@entry.ChangedAt.ToString("d MMM yyyy")</small>
                                </div>
                                <small class="text-muted">by @entry.ChangedBy</small>
                                @if (!string.IsNullOrEmpty(entry.Notes))
                                {
                                    <p class="mt-1 mb-0 small">@entry.Notes</p>
                                }
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to Applications</a>
        </div>
    </div>
</div>

