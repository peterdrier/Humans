@model Profiles.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-md-8">
        <h1>My Profile</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.HasPendingConsents)
        {
            <div class="alert alert-warning" role="alert">
                <strong>Action Required:</strong> You have @Model.PendingConsentCount pending consent(s) to review.
                <a asp-controller="Consent" asp-action="Index" class="alert-link">Review now</a>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Profile Information</span>
                <a asp-action="Edit" class="btn btn-sm btn-outline-primary">Edit</a>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img src="@Model.ProfilePictureUrl" alt="Profile" class="rounded-circle img-fluid" style="max-width: 100px;" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 100px; height: 100px; font-size: 2rem;">
                                @(string.IsNullOrEmpty(Model.BurnerName) ? "?" : Model.BurnerName[0])
                            </div>
                        }
                    </div>
                    <div class="col-md-9">
                        <h4>@(string.IsNullOrEmpty(Model.BurnerName) ? Model.DisplayName : Model.BurnerName)</h4>
                        <p class="text-muted mb-1">@Model.Email</p>
                        <span class="badge @(Model.MembershipStatus == "Active" ? "bg-success" : Model.MembershipStatus == "Suspended" ? "bg-danger" : "bg-secondary")">
                            @Model.MembershipStatus
                        </span>
                    </div>
                </div>

                <hr />

                <dl class="row">
                    @if (Model.CanViewLegalName)
                    {
                        <dt class="col-sm-3">Legal Name</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName))
                            {
                                @($"{Model.FirstName} {Model.LastName}")
                                <small class="text-muted">(only visible to you and board)</small>
                            }
                            else
                            {
                                <text>Not provided</text>
                            }
                        </dd>
                    }

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@(Model.FormattedPhoneNumber ?? "Not provided")</dd>

                    <dt class="col-sm-3">Location</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.CountryCode))
                        {
                            @Model.City
                            @if (!string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.CountryCode))
                            {
                                <text>, </text>
                            }
                            @Model.CountryCode
                        }
                        else
                        {
                            <text>Not provided</text>
                        }
                    </dd>

                    <dt class="col-sm-3">Bio</dt>
                    <dd class="col-sm-9">@(Model.Bio ?? "Not provided")</dd>
                </dl>
            </div>
        </div>

        @if (Model.ContactFields.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Contact Information</span>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary">Edit</a>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        @foreach (var field in Model.ContactFields)
                        {
                            <dt class="col-sm-3">
                                <i class="fa-solid @field.IconClass me-1"></i>
                                @field.Label
                            </dt>
                            <dd class="col-sm-9">
                                @field.Value
                                <i class="fa-solid @field.VisibilityIconClass text-muted ms-2"
                                   title="@field.VisibilityTooltip"
                                   data-bs-toggle="tooltip"></i>
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        }
        else
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Contact Information</span>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary">Add</a>
                </div>
                <div class="card-body text-muted">
                    No contact information added yet. <a asp-action="Edit">Add some</a> to let other members reach you.
                </div>
            </div>
        }

        @if (Model.Teams.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <span>Teams</span>
                </div>
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var team in Model.Teams)
                        {
                            <a asp-controller="Teams" asp-action="Detail" asp-route-slug="@team.TeamSlug"
                               class="btn btn-sm @(team.IsSystemTeam ? "btn-outline-secondary" : "btn-outline-primary")">
                                @team.TeamName
                                @if (team.IsMetalead)
                                {
                                    <span class="badge bg-warning text-dark ms-1">Lead</span>
                                }
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

        @if (Model.VolunteerHistory.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Burner CV</span>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary">Edit</a>
                </div>
                <div class="card-body py-2">
                    @foreach (var entry in Model.VolunteerHistory)
                    {
                        <div class="d-flex align-items-center py-1">
                            <span class="text-muted me-3" style="min-width: 50px; font-size: 0.85em;">@entry.FormattedDate</span>
                            <span class="fw-medium me-3" style="min-width: 180px;">@entry.EventName</span>
                            @if (!string.IsNullOrEmpty(entry.Description))
                            {
                                <span class="text-muted text-truncate" style="font-size: 0.9em;">@(entry.Description.Length > 80 ? entry.Description[..80] + "..." : entry.Description)</span>
                            }
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Burner CV</span>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary">Add</a>
                </div>
                <div class="card-body text-muted">
                    No entries yet. <a asp-action="Edit">Add your first entry</a> to document your involvement.
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">Quick Actions</div>
            <div class="list-group list-group-flush">
                <a asp-action="Edit" class="list-group-item list-group-item-action">Edit Profile</a>
                <a asp-controller="Consent" asp-action="Index" class="list-group-item list-group-item-action">
                    Manage Consents
                    @if (Model.HasPendingConsents)
                    {
                        <span class="badge bg-warning text-dark float-end">@Model.PendingConsentCount</span>
                    }
                </a>
                <a asp-controller="Application" asp-action="Index" class="list-group-item list-group-item-action">Governance</a>
            </div>
        </div>
    </div>
</div>
