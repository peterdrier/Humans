@model Profiles.Web.Models.AdminRoleAssignmentListViewModel
@{
    ViewData["Title"] = "Role Assignments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Role Assignments</h1>
    <span class="text-muted">@Model.TotalCount total</span>
</div>

<div class="card mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div class="btn-group" role="group">
            <a asp-action="Roles" asp-route-showInactive="@Model.ShowInactive"
               class="btn @(string.IsNullOrEmpty(Model.RoleFilter) ? "btn-primary" : "btn-outline-primary")">
                All
            </a>
            <a asp-action="Roles" asp-route-role="Admin" asp-route-showInactive="@Model.ShowInactive"
               class="btn @(Model.RoleFilter == "Admin" ? "btn-primary" : "btn-outline-primary")">
                Admin
            </a>
            <a asp-action="Roles" asp-route-role="Board" asp-route-showInactive="@Model.ShowInactive"
               class="btn @(Model.RoleFilter == "Board" ? "btn-primary" : "btn-outline-primary")">
                Board
            </a>
            <a asp-action="Roles" asp-route-role="Metalead" asp-route-showInactive="@Model.ShowInactive"
               class="btn @(Model.RoleFilter == "Metalead" ? "btn-primary" : "btn-outline-primary")">
                Metalead
            </a>
        </div>
        <div>
            @if (Model.ShowInactive)
            {
                <a asp-action="Roles" asp-route-role="@Model.RoleFilter" asp-route-showInactive="false" class="btn btn-outline-secondary btn-sm">
                    Hide Inactive
                </a>
            }
            else
            {
                <a asp-action="Roles" asp-route-role="@Model.RoleFilter" asp-route-showInactive="true" class="btn btn-outline-secondary btn-sm">
                    Show Inactive
                </a>
            }
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.RoleAssignments.Count == 0)
        {
            <p class="text-muted text-center py-4 mb-0">No role assignments found.</p>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Valid From</th>
                        <th>Valid To</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ra in Model.RoleAssignments)
                    {
                        <tr class="@(ra.IsActive ? "" : "table-secondary")">
                            <td>
                                <a asp-action="MemberDetail" asp-route-id="@ra.UserId">@ra.UserDisplayName</a>
                                <br />
                                <small class="text-muted">@ra.UserEmail</small>
                            </td>
                            <td><strong>@ra.RoleName</strong></td>
                            <td>@ra.ValidFrom.ToString("d MMM yyyy")</td>
                            <td>
                                @if (ra.ValidTo.HasValue)
                                {
                                    @ra.ValidTo.Value.ToString("d MMM yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (ra.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ended</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (ra.IsActive)
                                {
                                    <form asp-action="EndRole" asp-route-id="@ra.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('End this role assignment?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">End</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@if (Model.TotalCount > Model.PageSize)
{
    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (var i = 1; i <= totalPages && i <= 10; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Roles" asp-route-page="@i" asp-route-role="@Model.RoleFilter" asp-route-showInactive="@Model.ShowInactive">@i</a>
                </li>
            }
        </ul>
    </nav>
}
