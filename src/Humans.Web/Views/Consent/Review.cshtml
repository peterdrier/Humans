@model Humans.Web.Models.ConsentDetailViewModel
@{
    ViewData["Title"] = string.Format(Localizer["ConsentReview_Title"].Value, Model.DocumentName);
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Nav_Consents"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.DocumentName</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="mb-0">@Model.DocumentName</h1>
                <span class="badge bg-secondary">@Model.DocumentType</span>
                <span class="badge bg-info">@Localizer["Consent_Version"] @Model.VersionNumber</span>
            </div>
            @if (Model.HasAlreadyConsented)
            {
                <span class="badge bg-success fs-6">@Localizer["ConsentReview_AlreadyConsented"]</span>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.ChangesSummary))
        {
            <div class="alert alert-info">
                <strong>@Localizer["ConsentReview_ChangesInVersion"]</strong> @Model.ChangesSummary
            </div>
        }

        <div class="alert alert-warning">
            <strong>@Localizer["ConsentReview_Important"]</strong> @Localizer["ConsentReview_SpanishIsLegal"]
        </div>

        <ul class="nav nav-tabs" id="contentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="spanish-tab" data-bs-toggle="tab" data-bs-target="#spanish"
                        type="button" role="tab" aria-controls="spanish" aria-selected="true">
                    @Localizer["ConsentReview_SpanishTab"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="english-tab" data-bs-toggle="tab" data-bs-target="#english"
                        type="button" role="tab" aria-controls="english" aria-selected="false">
                    @Localizer["ConsentReview_EnglishTab"]
                </button>
            </li>
        </ul>

        <div class="tab-content border border-top-0 p-4 bg-white" id="contentTabsContent" style="max-height: 500px; overflow-y: auto;">
            <div class="tab-pane fade show active" id="spanish" role="tabpanel" aria-labelledby="spanish-tab">
                @if (string.IsNullOrEmpty(Model.ContentSpanish))
                {
                    <p class="text-muted">@Localizer["ConsentReview_ContentNotAvailable"]</p>
                }
                else
                {
                    <div class="document-content">
                        @Html.Raw(ConvertMarkdownToHtml(Model.ContentSpanish))
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="english" role="tabpanel" aria-labelledby="english-tab">
                @if (string.IsNullOrEmpty(Model.ContentEnglish))
                {
                    <p class="text-muted">@Localizer["ConsentReview_EnglishNotAvailable"]</p>
                }
                else
                {
                    <div class="alert alert-secondary mb-3">
                        <small>@Localizer["ConsentReview_TranslationDisclaimer"]</small>
                    </div>
                    <div class="document-content">
                        @Html.Raw(ConvertMarkdownToHtml(Model.ContentEnglish))
                    </div>
                }
            </div>
        </div>

        @if (!Model.HasAlreadyConsented)
        {
            <div class="card mt-4">
                <div class="card-body">
                    <form asp-action="Submit" method="post">
                        <input type="hidden" name="DocumentVersionId" value="@Model.DocumentVersionId" />

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="ExplicitConsent" value="true" id="explicitConsent" required>
                            <label class="form-check-label" for="explicitConsent">
                                <strong>@Localizer["ConsentReview_ConsentCheckbox"]</strong>
                                <br />
                                <small class="text-muted">
                                    @Localizer["ConsentReview_SpanishLegalNote"]
                                </small>
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["ConsentReview_BackToList"]</a>
                            <button type="submit" class="btn btn-primary">@Localizer["ConsentReview_GiveConsent"]</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["ConsentReview_BackToList"]</a>
            </div>
        }
    </div>
</div>

@functions {
    // Simple markdown-like conversion - in production, use a proper Markdown library
    string ConvertMarkdownToHtml(string content)
    {
        if (string.IsNullOrEmpty(content))
            return string.Empty;

        // Basic HTML encoding first
        content = System.Net.WebUtility.HtmlEncode(content);

        // Convert line breaks to <br> or <p>
        content = content.Replace("\r\n\r\n", "</p><p>");
        content = content.Replace("\n\n", "</p><p>");
        content = content.Replace("\r\n", "<br />");
        content = content.Replace("\n", "<br />");

        return $"<p>{content}</p>";
    }
}

<style>
    .document-content {
        font-size: 0.95rem;
        line-height: 1.7;
    }

    .document-content p {
        margin-bottom: 1rem;
    }
</style>
