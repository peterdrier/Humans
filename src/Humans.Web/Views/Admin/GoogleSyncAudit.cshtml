@model Humans.Web.Models.GoogleSyncAuditListViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Title</h1>
    @if (Model.BackUrl != null)
    {
        <a href="@Model.BackUrl" class="btn btn-outline-secondary">@(Model.BackLabel ?? "Back")</a>
    }
</div>

@if (Model.Entries.Count == 0)
{
    <div class="alert alert-info">
        No sync audit entries found.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Description</th>
                        <th>User</th>
                        <th>Role</th>
                        <th>Source</th>
                        <th>Result</th>
                        <th>Actor</th>
                        <th>When</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.Entries)
                    {
                        var rowClass = entry.Success == false ? "table-danger" : "";
                        <tr class="@rowClass">
                            <td><span class="badge bg-secondary">@entry.Action</span></td>
                            <td>
                                @entry.Description
                                @if (entry.ResourceName != null)
                                {
                                    <br />
                                    <small class="text-muted">Resource: @entry.ResourceName</small>
                                }
                            </td>
                            <td>@(entry.UserEmail ?? "--")</td>
                            <td>@(entry.Role ?? "--")</td>
                            <td>@(entry.SyncSource ?? "--")</td>
                            <td>
                                @if (entry.Success == true)
                                {
                                    <span class="badge bg-success">OK</span>
                                }
                                else if (entry.Success == false)
                                {
                                    <span class="badge bg-danger" title="@entry.ErrorMessage">Failed</span>
                                    @if (!string.IsNullOrEmpty(entry.ErrorMessage))
                                    {
                                        <br />
                                        <small class="text-danger">@entry.ErrorMessage</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">--</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">System</span>
                                <span class="ms-1">@entry.ActorName</span>
                            </td>
                            <td class="text-nowrap">@entry.OccurredAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
