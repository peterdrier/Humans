@model Humans.Web.Models.AdminApplicationDetailViewModel
@{
    ViewData["Title"] = Localizer["AdminApplicationDetail_Title"].Value;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Nav_Admin"]</a></li>
        <li class="breadcrumb-item"><a asp-action="Applications">@Localizer["AdminApplications_Title"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["AdminApp_Review"]</li>
    </ol>
</nav>

<vc:temp-data-alerts />

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>@Localizer["AdminAppDetail_ApplicationReview"]</h1>
            <span class="badge fs-5 @StatusBadgeExtensions.GetApplicationStatusBadgeClass(Model.Status)">@Model.Status</span>
        </div>

        <div class="card mb-4">
            <div class="card-header">@Localizer["AdminApp_Applicant"]</div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <vc:user-avatar profile-picture-url="@Model.UserProfilePictureUrl"
                                    display-name="@Model.UserDisplayName"
                                    size="48"
                                    css-class="me-3" />
                    <div>
                        <h5 class="mb-0">@Model.UserDisplayName</h5>
                        <small class="text-muted">@Model.UserEmail</small>
                    </div>
                    <a asp-action="HumanDetail" asp-route-id="@Model.UserId" class="btn btn-sm btn-outline-secondary ms-auto">
                        @Localizer["AdminAppDetail_ViewProfile"]
                    </a>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">@Localizer["AdminAppDetail_Motivation"]</div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.Motivation</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AdditionalInfo))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["ApplicationDetail_AdditionalInfo"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.AdditionalInfo</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SignificantContribution))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["Application_SignificantContribution"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.SignificantContribution</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.RoleUnderstanding))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["Application_RoleUnderstanding"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.RoleUnderstanding</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ReviewNotes))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["ApplicationDetail_ReviewerNotes"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.ReviewNotes</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">@Localizer["ApplicationDetail_ApplicationInfo"]</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-5">@Localizer["Governance_Submitted"]</dt>
                    <dd class="col-7">@Model.SubmittedAt.ToString("d MMM yyyy")</dd>

                    @if (!string.IsNullOrEmpty(Model.Language))
                    {
                        <dt class="col-5">@Localizer["AdminAppDetail_Language"]</dt>
                        <dd class="col-7">
                            @{
                                var languageNames = new Dictionary<string, string>
                                {
                                    ["es"] = "Castellano",
                                    ["en"] = "English",
                                    ["de"] = "Deutsch",
                                    ["fr"] = "Fran√ßais",
                                    ["it"] = "Italiano"
                                };
                                var langDisplay = languageNames.GetValueOrDefault(Model.Language, Model.Language);
                            }
                            @langDisplay
                        </dd>
                    }

                    @if (Model.ReviewStartedAt.HasValue)
                    {
                        <dt class="col-5">@Localizer["ApplicationDetail_ReviewStarted"]</dt>
                        <dd class="col-7">@Model.ReviewStartedAt.Value.ToString("d MMM yyyy")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.ReviewerName))
                    {
                        <dt class="col-5">@Localizer["AdminAppDetail_Reviewer"]</dt>
                        <dd class="col-7">@Model.ReviewerName</dd>
                    }
                </dl>
            </div>
        </div>

        @if (Model.CanApproveReject)
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["TeamDetail_Actions"]</div>
                <div class="card-body">
                    <form asp-action="ApplicationAction" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()

                        @if (Model.CanApproveReject)
                        {
                            <div class="mb-3">
                                <label class="form-label">@Localizer["AdminAppDetail_NotesLabel"]</label>
                                <textarea name="Notes" class="form-control" rows="3" placeholder="@Localizer["AdminAppDetail_NotesPlaceholder"].Value"></textarea>
                            </div>

                            <button type="submit" name="Action" value="Approve" class="btn btn-success w-100 mb-2"
                                    data-confirm="@Localizer["AdminAppDetail_ApproveConfirm"].Value">
                                @Localizer["AdminAppDetail_Approve"]
                            </button>
                            <button type="submit" name="Action" value="Reject" class="btn btn-danger w-100 mb-2"
                                    data-confirm="@Localizer["AdminAppDetail_RejectConfirm"].Value">
                                @Localizer["AdminAppDetail_Reject"]
                            </button>
                            <button type="submit" name="Action" value="RequestInfo" class="btn btn-warning w-100">
                                @Localizer["AdminAppDetail_RequestMoreInfo"]
                            </button>
                        }
                    </form>
                </div>
            </div>
        }

        <div class="card">
            @await Html.PartialAsync("_ApplicationHistory", Model.History)
        </div>
    </div>
</div>

