@model Humans.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = Model.IsOwnProfile ? Localizer["Profile_Title"].Value : Model.DisplayName;
}

<div class="row align-items-start">
    <div class="@(Model.IsOwnProfile ? "col-md-8" : "col-md-12")">
        <h1>@(Model.IsOwnProfile ? Localizer["Profile_Title"] : Model.DisplayName)</h1>

        @if (Model.IsOwnProfile && TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.IsOwnProfile && Model.HasPendingConsents)
        {
            <div class="alert alert-warning" role="alert">
                <strong>@Localizer["Profile_ActionRequired"]</strong> @string.Format(Localizer["Profile_PendingConsents"].Value, Model.PendingConsentCount)
                <a asp-controller="Consent" asp-action="Index" class="alert-link">@Localizer["Profile_ReviewNow"]</a>
            </div>
        }

        @if (Model.IsOwnProfile && !Model.IsApproved)
        {
            <div class="alert alert-info" role="alert">
                <strong>@Localizer["Profile_PendingApproval"]</strong> @Localizer["Profile_PendingApprovalDescription"]
            </div>
        }

        @* === Card 1: Public Profile === *@
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@Localizer["Profile_Information"]</span>
                @if (Model.IsOwnProfile)
                {
                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary">@Localizer["Common_Edit"]</a>
                }
            </div>
            <div class="card-body">
                @* Photo + Name + Pronouns + Status + Teams *@
                <div class="row mb-3">
                    <div class="col-auto">
                        @if (!string.IsNullOrEmpty(Model.EffectiveProfilePictureUrl))
                        {
                            <img src="@Model.EffectiveProfilePictureUrl" alt="Profile" class="rounded-circle" style="width: 160px; height: 160px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 160px; height: 160px; font-size: 3.2rem;">
                                @(string.IsNullOrEmpty(Model.BurnerName) ? "?" : Model.BurnerName[0])
                            </div>
                        }
                    </div>
                    <div class="col">
                        <h4>@(string.IsNullOrEmpty(Model.BurnerName) ? Model.DisplayName : Model.BurnerName)</h4>
                        @if (!string.IsNullOrEmpty(Model.Pronouns))
                        {
                            <span class="text-muted me-2">@Model.Pronouns</span>
                        }
                        <span class="badge @(Model.MembershipStatus == "Active" ? "bg-success" : Model.MembershipStatus == "Suspended" ? "bg-danger" : "bg-secondary")">
                            @Model.MembershipStatus
                        </span>
                        @if (Model.Teams.Count > 0)
                        {
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var team in Model.Teams)
                                {
                                    <a asp-controller="Team" asp-action="Details" asp-route-slug="@team.TeamSlug"
                                       class="btn btn-sm @(team.IsSystemTeam ? "btn-outline-secondary" : "btn-outline-primary")">
                                        @team.TeamName
                                        @if (team.IsLead)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@Localizer["Profile_Lead"]</span>
                                        }
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>

                <hr />
                <dl class="row mb-0">
                    @* Location *@
                    <dt class="col-3">@Localizer["Profile_Location"]</dt>
                    <dd class="col-9">
                        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.CountryCode))
                        {
                            @Model.City
                            @if (!string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.CountryCode))
                            {
                                <text>, </text>
                            }
                            @Model.CountryCode
                        }
                        else
                        {
                            <text>@Localizer["Common_NotProvided"]</text>
                        }
                    </dd>

                    @* Birthday (public) *@
                    <dt class="col-3">@Localizer["Profile_DateOfBirth"]</dt>
                    <dd class="col-9">
                        @if (!string.IsNullOrEmpty(Model.FormattedBirthday))
                        {
                            @Model.FormattedBirthday
                        }
                        else
                        {
                            <text>@Localizer["Common_NotProvided"]</text>
                        }
                    </dd>
                </dl>

                @* Contact Information (non-BoardOnly emails + contact fields) *@
                @if (Model.PublicUserEmails.Count > 0 || Model.ContactFields.Count > 0)
                {
                    <hr />
                    <h6 class="text-muted mb-2">@Localizer["Profile_ContactInformation"]</h6>
                    <dl class="row mb-0">
                        @foreach (var email in Model.PublicUserEmails)
                        {
                            <dt class="col-3">
                                <i class="fa-solid fa-envelope me-1"></i>
                                Email
                            </dt>
                            <dd class="col-9">
                                <a href="mailto:@email.Email">@email.Email</a>
                                @if (email.IsNotificationTarget)
                                {
                                    <span class="badge bg-primary ms-1" title="@Localizer["Profile_NotificationTarget"]" data-bs-toggle="tooltip"><i class="fa-solid fa-bell"></i> @Localizer["Profile_NotificationTargetShort"]</span>
                                }
                            </dd>
                        }
                        @foreach (var field in Model.ContactFields)
                        {
                            <dt class="col-3">
                                <i class="@field.IconClass me-1"></i>
                                @field.Label
                            </dt>
                            <dd class="col-9">
                                @if (!string.IsNullOrEmpty(field.LinkUrl))
                                {
                                    <a href="@field.LinkUrl" target="_blank" rel="noopener noreferrer">@field.Value</a>
                                }
                                else
                                {
                                    @field.Value
                                }
                                @if (Model.IsOwnProfile)
                                {
                                    <i class="@field.VisibilityIconClass text-muted ms-2"
                                       title="@field.VisibilityTooltip"
                                       data-bs-toggle="tooltip"></i>
                                }
                            </dd>
                        }
                    </dl>
                }
                else if (Model.IsOwnProfile)
                {
                    <hr />
                    <p class="text-muted mb-0">
                        @Localizer["Profile_NoContactInfo"] <a asp-action="Edit">@Localizer["Profile_AddSome"]</a>
                    </p>
                }

                @* Bio *@
                @if (!string.IsNullOrEmpty(Model.Bio))
                {
                    <hr />
                    <h6 class="text-muted mb-2">@Localizer["Profile_Bio"]</h6>
                    <p class="mb-0" style="white-space: pre-line">@Model.Bio</p>
                }

                @* Contribution Interests *@
                @if (!string.IsNullOrEmpty(Model.ContributionInterests))
                {
                    <hr />
                    <h6 class="text-muted mb-2">@Localizer["Profile_ContributionInterests"]</h6>
                    <p class="mb-0" style="white-space: pre-line">@Model.ContributionInterests</p>
                }

                @* Burner CV *@
                @if (Model.VolunteerHistory.Count > 0)
                {
                    <hr />
                    <h6 class="text-muted mb-2">@Localizer["Profile_BurnerCV"]</h6>
                    @foreach (var entry in Model.VolunteerHistory)
                    {
                        <div class="d-flex align-items-center py-1">
                            <span class="text-muted me-3" style="min-width: 50px; font-size: 0.85em;">@entry.FormattedDate</span>
                            <span class="fw-medium me-3" style="min-width: 180px;">@entry.EventName</span>
                            @if (!string.IsNullOrEmpty(entry.Description))
                            {
                                <span class="text-muted text-truncate" style="font-size: 0.9em;">@(entry.Description.Length > 80 ? entry.Description[..80] + "..." : entry.Description)</span>
                            }
                        </div>
                    }
                }
                else if (Model.IsOwnProfile)
                {
                    <hr />
                    <p class="text-muted mb-0">
                        @Localizer["Profile_NoCVEntries"] <a asp-action="Edit">@Localizer["Profile_AddFirstEntry"]</a>
                    </p>
                }
            </div>
        </div>

        @* === Card 2: Board & Private Information (self or board only) === *@
        @if (Model.CanViewLegalName)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>
                        <i class="fa-solid fa-lock me-1"></i>
                        @Localizer["Profile_BoardInformation"]
                    </span>
                    @if (Model.IsOwnProfile)
                    {
                        <a asp-action="Edit" class="btn btn-sm btn-outline-primary">@Localizer["Common_Edit"]</a>
                    }
                </div>
                <div class="card-body">
                    <small class="text-muted d-block mb-3">@Localizer["Profile_OnlyVisibleToYouAndBoard"]</small>

                    <dl class="row mb-0">
                        @* Legal Name *@
                        <dt class="col-3">@Localizer["Profile_LegalName"]</dt>
                        <dd class="col-9">
                            @if (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName))
                            {
                                @($"{Model.FirstName} {Model.LastName}")
                            }
                            else
                            {
                                <text>@Localizer["Common_NotProvided"]</text>
                            }
                        </dd>

                        @* Emergency Contact *@
                        @if (!string.IsNullOrEmpty(Model.EmergencyContactName) || !string.IsNullOrEmpty(Model.EmergencyContactPhone))
                        {
                            <dt class="col-3">@Localizer["Profile_EmergencyContact"]</dt>
                            <dd class="col-9">
                                @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                                {
                                    @Model.EmergencyContactName
                                }
                                @if (!string.IsNullOrEmpty(Model.EmergencyContactRelationship))
                                {
                                    <text> (@Model.EmergencyContactRelationship)</text>
                                }
                                @if (!string.IsNullOrEmpty(Model.EmergencyContactPhone))
                                {
                                    <text> â€” </text><a href="tel:@Model.EmergencyContactPhone">@Model.EmergencyContactPhone</a>
                                }
                            </dd>
                        }

                        @* Board-only emails *@
                        @foreach (var email in Model.BoardOnlyUserEmails)
                        {
                            <dt class="col-3">
                                <i class="fa-solid fa-envelope me-1"></i>
                                Email
                            </dt>
                            <dd class="col-9">
                                <a href="mailto:@email.Email">@email.Email</a>
                                @if (email.IsNotificationTarget)
                                {
                                    <span class="badge bg-primary ms-1" title="@Localizer["Profile_NotificationTarget"]" data-bs-toggle="tooltip"><i class="fa-solid fa-bell"></i> @Localizer["Profile_NotificationTargetShort"]</span>
                                }
                            </dd>
                        }

                        @* Board Notes (from the member) *@
                        @if (!string.IsNullOrEmpty(Model.BoardNotes))
                        {
                            <dt class="col-3">@Localizer["Profile_BoardNotes"]</dt>
                            <dd class="col-9" style="white-space: pre-line">@Model.BoardNotes</dd>
                        }
                    </dl>
                </div>
            </div>
        }
    </div>

    @if (Model.IsOwnProfile)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">@Localizer["Profile_QuickActions"]</div>
                <div class="list-group list-group-flush">
                    <a asp-action="Edit" class="list-group-item list-group-item-action">@Localizer["Common_EditProfile"]</a>
                    <a asp-controller="Consent" asp-action="Index" class="list-group-item list-group-item-action">
                        @Localizer["Dashboard_ManageConsents"]
                        @if (Model.HasPendingConsents)
                        {
                            <span class="badge bg-warning text-dark float-end">@Model.PendingConsentCount</span>
                        }
                    </a>
                    <a asp-controller="Governance" asp-action="Index" class="list-group-item list-group-item-action">@Localizer["Nav_Governance"]</a>
                    <a asp-action="Privacy" class="list-group-item list-group-item-action">@Localizer["ProfilePrivacy_Title"]</a>
                </div>
            </div>
        </div>
    }
</div>
