@model Humans.Web.Models.PreferredEmailViewModel
@{
    ViewData["Title"] = Localizer["PreferredEmail_Title"].Value;
}

<div class="row">
    <div class="col-md-8">
        <h1>@Localizer["PreferredEmail_Title"]</h1>
        <p class="text-muted">
            @Localizer["PreferredEmail_Description"]
        </p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">@Localizer["PreferredEmail_CurrentSettings"]</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">@Localizer["PreferredEmail_SignInEmail"]</dt>
                    <dd class="col-sm-8">
                        <code>@Model.OAuthEmail</code>
                        <span class="badge bg-secondary ms-2">@Localizer["PreferredEmail_GoogleAccount"]</span>
                    </dd>

                    <dt class="col-sm-4">@Localizer["PreferredEmail_Title"]</dt>
                    <dd class="col-sm-8">
                        @if (string.IsNullOrEmpty(Model.CurrentPreferredEmail))
                        {
                            <span class="text-muted">@Localizer["PreferredEmail_NotSet"]</span>
                        }
                        else
                        {
                            <code>@Model.CurrentPreferredEmail</code>
                            @if (Model.IsVerified)
                            {
                                <span class="badge bg-success ms-2">
                                    <i class="fa-solid fa-check me-1"></i>@Localizer["PreferredEmail_Verified"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark ms-2">
                                    <i class="fa-solid fa-clock me-1"></i>@Localizer["PreferredEmail_PendingVerification"]
                                </span>
                            }
                        }
                    </dd>

                    <dt class="col-sm-4">@Localizer["PreferredEmail_NotificationsSentTo"]</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsVerified && !string.IsNullOrEmpty(Model.CurrentPreferredEmail))
                        {
                            <code>@Model.CurrentPreferredEmail</code>
                            <span class="text-success">(@Localizer["PreferredEmail_Preferred"])</span>
                        }
                        else
                        {
                            <code>@Model.OAuthEmail</code>
                            <span class="text-muted">(@Localizer["PreferredEmail_SignInEmailLabel"])</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        @if (Model.IsPendingVerification)
        {
            <div class="alert alert-info">
                <i class="fa-solid fa-envelope me-2"></i>
                @string.Format(Localizer["PreferredEmail_VerificationSent"].Value, Model.CurrentPreferredEmail)
                @if (!Model.CanResendVerification)
                {
                    <br />
                    <small class="text-muted">
                        @string.Format(Localizer["PreferredEmail_ResendCooldown"].Value, Model.MinutesUntilResend)
                    </small>
                }
            </div>
        }

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    @if (string.IsNullOrEmpty(Model.CurrentPreferredEmail))
                    {
                        <text>@Localizer["PreferredEmail_SetTitle"]</text>
                    }
                    else
                    {
                        <text>@Localizer["PreferredEmail_ChangeTitle"]</text>
                    }
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="SetPreferredEmail" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="NewEmail" class="form-label"></label>
                        <input asp-for="NewEmail" class="form-control" type="email"
                               placeholder="you@example.com" />
                        <span asp-validation-for="NewEmail" class="text-danger"></span>
                        <div class="form-text">
                            @Localizer["PreferredEmail_VerificationWillBeSent"]
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary"
                            @(Model.CanResendVerification ? "" : "disabled")>
                        <i class="fa-solid fa-paper-plane me-1"></i>
                        @Localizer["PreferredEmail_SendVerification"]
                    </button>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.CurrentPreferredEmail))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["PreferredEmail_RemoveTitle"]</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        @Localizer["PreferredEmail_RemoveDescription"]
                    </p>
                    <form asp-action="ClearPreferredEmail" method="post">
                        <button type="submit" class="btn btn-outline-danger"
                                data-confirm="@Localizer["PreferredEmail_RemoveConfirm"].Value">
                            <i class="fa-solid fa-trash me-1"></i>
                            @Localizer["PreferredEmail_RemoveButton"]
                        </button>
                    </form>
                </div>
            </div>
        }

        <div class="mt-4">
            <a asp-action="Edit" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i>
                @Localizer["PreferredEmail_BackToEdit"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
